<h1>New Ad</h1>
 
     <%= form_for @advertisement do |advert| %>
       <div class="form-group">
         <%= advert.label :title %>
         <%= advert.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
       </div>
       <div class="form-group">
         <%= advert.label :body %>
         <%= advert.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter ad body" %>
       </div>
       <div class="form-group">
         <%= advert.label :price %>
         <%= advert.number_field :price, class: 'form-control', placeholder: "Enter ad price" %>
       </div>
       <div class="form-group">
         <%= advert.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
